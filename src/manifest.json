{
    "manifest_version": 2,
    "name": "OpenAI Browser Chat",
    "version": "1.0",
    "description": "Natural language AI chat extension, customizable, user-friendly",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-64.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_popup": "options.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [],
    "options_page": "options.html"
}