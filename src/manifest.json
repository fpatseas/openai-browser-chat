{
    "manifest_version": 2,
    "name": "AI English Corrector",
    "version": "1.0",
    "description": "English correction plugin using OpenAI's API",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "options.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "options_page": "options.html"
}